{
    "name": "xiudongy/flarum-ext-reward-mixin",
    "description": "Allow users to log in with Mixin",
    "type": "flarum-extension",
    "keywords": ["rewardentication"],
    "license": "MIT",
    "rewardors": [
        {
            "name": "Xiudongy",
            "email": "xiudongy@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/flarum/core/issues",
        "source": "https://github.com/xiudongy/flarum-ext-reward-mixin"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.8"
    },
    "autoload": {
        "psr-4": {
            "Xiudongy\\Reward\\Mixin\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "flarum-extension": {
            "title": "Mixin Reward",
            "icon": {
                "name": "fab fa-Mixin",
                "backgroundColor": "#eee",
                "color": "#333"
            }
        }
    }
}
